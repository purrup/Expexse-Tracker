<div class="row total-amount mb-5">
  <div class="col-12">
    <div class="row">
      <p>總金額：</p><span>{{totalAmount}}</span>
    </div>
  </div>
</div>
<div class="row mb-5">

  <ul class="list-group ">
    {{#each records}}
    <li
      class="list-group-item-active list-group-item-action list-group-item-light d-md-flex flex-row justify-content-between align-items-center mb-3">
      <i class="fas fa-{{{this.category}}}"></i>
      <div class="expense-name col-md-auto mr-auto">
        <p>{{this.name}}</p><span>{{this.date}}</span>
      </div>
      <div class="amount col-auto mr-auto">
        <span>{{this.amount}}</span>
      </div>
      <div class="col-auto">
        <a href="/records/{{{this.id}}}/edit" class="btn btn-success btn-lg">修改</a>
        <form action="/records/{{{this.id}}}/delete?_method=DELETE" method="post" style="display:inline">
          <button type="submit" class="btn btn-danger btn-lg">刪除</button>
        </form>
      </div>

    </li>
    {{/each}}
  </ul>
</div>
<div class="row create mt-3">
